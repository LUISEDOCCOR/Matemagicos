---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro"
import RecommendationCard from "../components/RecommendationCard.astro"
import CardTheme from "../components/CardTheme.astro"

//data
import { recommendations } from "../data/recommendations"
import { sections } from "../data/sections";
---

<Layout title="MatemÃ¡gicos">
	<Header/>
	<main class="mb-32 px-4 lg:px-0">
		<section 
		class="flex justify-center gap-6 lg:gap-0  
		lg:justify-between flex-wrap mt-16 sm:mt-24
		">
			{
				recommendations.map((recommendation) => (
					<RecommendationCard 
						name={recommendation.name}
						stars={recommendation.stars}
					/>
				))
			}
		</section>
		<section 
		class="mt-16 sm:mt-24 flex justify-center gap-6 lg:gap-0
		 lg:justify-between flex-wrap 

		">
			{
				sections.map((section) => (
					<CardTheme 
					title={section.title} 
					content={section.content} 
					cover_name={section.cover_name}
					/>
				))
			}
		</section>
	</main>
</Layout>

